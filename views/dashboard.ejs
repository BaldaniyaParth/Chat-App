
<%- include("layouts/header.ejs") %>



    <nav>
        <div class="logo-name">
            <span class="logo_name">Chat System</span>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li><a href="#">
                    <i class="uil uil-estate"></i>
                    <span class="link-name">Dahsboard</span>
                </a></li>
            </ul>
            
            <ul class="logout-mode">
                <li>
                    <a href="/logout">
                        <i class="uil uil-signout"></i>
                        <span class="link-name">Logout</span>
                    </a>
                </li>

                <li class="mode">
                    <a href="#">
                        <i class="uil uil-moon"></i>
                        <span class="link-name">Dark Mode</span>
                    </a>

                    <div class="mode-toggle">
                        <span class="switch"></span>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <section class="dashboard">
        <div class="top">
            <i class="uil uil-bars sidebar-toggle"></i> 
            <img src=" <%= user.image %>" alt="User Profile">
        </div>

        <div class="dash-content">
            <div class="overview">
                <div class="title">
                    <span class="text">Hii, <%= user.name %> </span>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <ul class="list-group">
                            <% 
                                if(users.length > 0){
                                    for(let i = 0; i < users.length; i++){
                                        %>
                                            <li class="list-group-item list-group-item-dark cursor-pointer user-list" data-id="<%=users[i]["_id"]%>">
                                                <img src= " <%= users[i]["image"] %>" alt="user image" width="40px" height="40px">
                                                <%= users[i]["name"] %>

                                                <% 
                                                    if(users[i]["is_online"] == "1"){
                                                        %>
                                                            <sup class="online-status" id="<%=users[i]["_id"]%>-status">Online</sup>
                                                        <%
                                                    }else{
                                                        %>
                                                            <sup class="offline-status" id="<%=users[i]["_id"]%>-status">Offline</sup>
                                                        <%
                                                    }
                                                %>
                                            </li>
                                        <%
                                    }
                                }
                            %>
                        </ul>
                    </div>

                    <div class="col-md-8">
                            <% 
                                if(users.length > 0){
                                    for(let i = 0; i < users.length; i++){
                                        %>
                                            <h3 class="start-head">
                                                <img src= " <%= users[i]["image"] %>" alt="user image" width="40px" height="40px">
                                                <%= users[i]["name"] %>
                                            </h3>
                                        <%
                                    }
                                }
                            %>
                        <div class="chat-section">
                            <div class="chat-container">
                            </div>

                            <form action="" id="chat-form">
                                <input type="text" name="message" placeholder="enter message" id="message" class="border" required>
                                <input type="submit" value="Send Message" class="btn btn-primary">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
        

    

<%- include("layouts/footer.ejs") %>